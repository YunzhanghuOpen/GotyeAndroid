<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="horizontal_slide" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/gotye_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/gotye_slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/gotye_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/gotye_slide_in_from_left</item>
    </style>

</resources>